<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.FilmDetailsFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.appdaniela.viewModels.DetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E9E9E9">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/favourite_boton"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="52dp"
                    android:textColor="#2859FF"
                    android:textSize="11dp"
                    app:layout_constraintStart_toStartOf="@+id/title_details"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@{viewModel.selectedValue.favourite?`Quitar de favoritos`:`Añadir a favoritos`}"
                    tools:text="Añadir a favoritos" />

                <TextView
                    android:id="@+id/title_details"
                    android:layout_width="300dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="@{viewModel.selectedValue.title}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:padding="20dp"
                    android:layout_marginTop="25dp"
                    android:paddingTop="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_details">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/details_title"
                        style="@style/mis_servici"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.selectedValue.description}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/details_realese"
                        style="@style/subtexto_solic"
                        android:layout_marginTop="20dp"
                        android:layout_width="92dp"
                        android:layout_height="16dp"
                        android:text="@{`Precio: `+viewModel.selectedValue.prices}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/details_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>