<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.FilmDetailsFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.appdaniela.viewModels.DetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E9E9E9">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/favourite_boton"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="52dp"
                    android:textColor="#2859FF"
                    android:textSize="15dp"
                    app:layout_constraintStart_toStartOf="@+id/title_details"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@{viewModel.selectedValue.favourite?`Quitar de favoritos`:`Añadir a favoritos`}"
                    tools:text="Añadir a favoritos" />

                <ImageView
                    android:id="@+id/erase_post"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@android:drawable/ic_delete"
                    app:layout_constraintEnd_toEndOf="@+id/title_details"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title_details"
                    android:layout_width="300dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="@{viewModel.selectedValue.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title_post"
                    android:layout_width="300dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{`Descripcion:\n`+viewModel.selectedValue.description}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_details" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/gps"
                    android:layout_width="269dp"
                    android:layout_height="150dp"
                    android:background="@drawable/card_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_post"
                    app:layout_constraintVertical_bias="0.177" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/gps_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_baseline_gps_fixed_24"
                    app:layout_constraintBottom_toBottomOf="@+id/gps"
                    app:layout_constraintEnd_toEndOf="@+id/gps"
                    app:layout_constraintHorizontal_bias="0.15"
                    app:layout_constraintStart_toStartOf="@+id/gps"
                    app:layout_constraintTop_toTopOf="@+id/gps"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/gps_text"
                    style="@style/subtexto_solic"
                    android:textSize="11sp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Localization"
                    app:layout_constraintBottom_toBottomOf="@+id/gps"
                    app:layout_constraintEnd_toEndOf="@+id/gps"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/gps_icon"
                    app:layout_constraintTop_toTopOf="@+id/gps" />


            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>